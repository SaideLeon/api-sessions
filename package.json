{
  "name": "api-sessions",
  "version": "1.0.0",
  "description": "API for managing user sessions, messages, vendors and sellers",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run db:push && npm run prisma:generate",
    
    "db:push": "prisma db push",
    "db:reset": "prisma db push --force-reset",
    "db:status": "prisma db push --preview-feature",
    "db:studio": "prisma studio",
    
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    
    "clean": "rm -rf node_modules",
    "clean:full": "rm -rf node_modules && rm -rf dist && rm -rf coverage",
    "reinstall": "npm run clean && npm install",
    
    "check": "npm run prisma:validate && npm run test"
  },
  "dependencies": {
    // AI and Language Processing
    "@langchain/core": "^0.3.17",
    "@langchain/google-genai": "^0.1.3",
    "@langchain/groq": "^0.1.2",
    "groq-sdk": "^0.7.0",

    // Database and ORM
    "@prisma/client": "^6.0.1",

    // Core Server and Security
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",

    // Authentication and Security
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "https-proxy-agent": "^5.0.1",
    "uuid": "^9.0.1",

    // WhatsApp Integration
    "whatsapp-web.js": "^1.26.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",

    // Browser Automation
    "puppeteer": "^23.7.1",

    // File Processing and Media
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.5-lts.1",
    "node-webpmux": "^3.1.7",
    "archiver": "^5.3.2",
    "unzipper": "^0.10.14",

    // Real-time Communication
    "socket.io": "^4.8.1",
    "ws": "^8.9.0",

    // Utilities
    "winston": "^3.17.0",
    "node-cache": "^5.1.2",
    "dotenv": "^16.4.5",
    "yup": "^1.3.3",
    "joi": "^17.13.3",
    "fs-extra": "^10.1.0",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",

    // HTTP and Networking
    "node-fetch": "^2.7.0",
    "cross-fetch": "^3.1.5",

    // Buffer and Stream Handling
    "readable-stream": "^3.6.2",
    "safe-buffer": "^5.2.1",

    // Essential Low-level Dependencies
    "async": "^3.2.6",
    "debug": "^4.3.7",
    "bluebird": "^3.4.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.8.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.8.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  }
}