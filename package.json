{
  "name": "api-sessions",
  "version": "1.0.0",
  "description": "API for managing user sessions, messages, vendors and sellers",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run db:prod:deploy",
    
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force --skip-generate",
    "db:status": "prisma migrate status",
    "db:studio": "prisma studio",
    
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    
    "db:dev:setup": "npm run prisma:generate && npm run db:migrate",
    "db:prod:deploy": "npm run prisma:generate && npm run db:migrate:prod",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    
    "clean": "rm -rf node_modules",
    "clean:full": "rm -rf node_modules && rm -rf dist && rm -rf coverage",
    "reinstall": "npm run clean && npm install",
    
    "check": "npm run prisma:validate && npm run test"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.8.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.8.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.x"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}

